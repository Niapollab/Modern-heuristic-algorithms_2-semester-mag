{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Windows)",
            "type": "cppvsdbg",
            "request": "launch",
            "console": "integratedTerminal",
            "program": "${workspaceRoot}/target/debug/${workspaceFolderBasename}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "full"
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}
